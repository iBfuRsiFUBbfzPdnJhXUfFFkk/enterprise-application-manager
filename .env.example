# Django Settings
# IMPORTANT: In .env files, escape $ with $$ and % with %%
# Example: "my-key$123" becomes "my-key$$123"
DJANGO_SECRET_KEY="change-me-to-random-secret-key"
DEBUG=True

# Allowed Hosts - Add your hostname/domain for network access
# JSON array format - add your machine's hostname.local for mDNS access
# macOS example: ["127.0.0.1","0.0.0.0","localhost","your-macbook.local"]
# Windows example: ["127.0.0.1","0.0.0.0","localhost","your-pc.local"]
ALLOWED_HOSTS=["127.0.0.1","0.0.0.0","localhost"]

# Database (SQLite)
# Currently using db.sqlite3 in project root (data/db.sqlite3 in Docker)

# LDAP Configuration (if enabled)
SHOULD_USE_LDAP=False
AUTH_LDAP_SERVER_URI="ldap://ldap.example.com"
AUTH_LDAP_BIND_DN="domain\\username"
AUTH_LDAP_BIND_PASSWORD="password"
AUTH_LDAP_SEARCH_BASE="dc=example,dc=com"
AUTH_LDAP_SEARCH_FILTER="(sAMAccountName=%(user)s)"
AUTH_LDAP_USER_ATTR_MAP="{\"first_name\": \"givenName\", \"last_name\": \"sn\", \"email\": \"mail\"}"

# Email Configuration
EMAIL_HOST="localhost"
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_FROM="noreply@example.com"

# Encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_SECRET="generate-with-cryptography.fernet.generate_key()"

# MinIO Object Storage
# Generate random credentials with:
#   python3 -c "import secrets; print(f'MINIO_ROOT_USER=admin-{secrets.token_hex(8)}\nMINIO_ROOT_PASSWORD={secrets.token_urlsafe(32)}')"
MINIO_ROOT_USER=admin-CHANGE-ME
MINIO_ROOT_PASSWORD=CHANGE-ME-TO-RANDOM-VALUE
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=admin-CHANGE-ME
MINIO_SECRET_KEY=CHANGE-ME-TO-RANDOM-VALUE
MINIO_BUCKET_NAME=enterprise-app-media
MINIO_USE_SSL=false
USE_MINIO=true

# Public domain for file URLs (used to generate accessible URLs for MinIO files)
# Set this to your machine's hostname and port for network access
# macOS example: your-macbook.local:50478
# Windows example: your-pc.local:50478
# Localhost (default): localhost:50478
PUBLIC_DOMAIN=localhost:50478

# CSRF Trusted Origins (for HTTPS network access)
# Required when accessing via HTTPS with custom hostname/port
# Comma-separated list of full URLs including protocol, hostname, and port
# macOS example: https://your-macbook.local:50478
# Windows example: https://your-pc.local:50478
# Multiple origins: https://hostname1.local:50478,https://hostname2.local:8443
CSRF_TRUSTED_ORIGINS_EXTRA=

# Poppler (PDF processing) - Only needed on Windows
POPPLER_PATH=

# WebAuthn / Passkey Configuration
WEBAUTHN_ENABLED=True
WEBAUTHN_RP_NAME="Enterprise Application Manager"
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:8000
